<div class="row">
  <div class="col-sm-6">
    <h2>Contacts</h2>
  </div>
  <div class="col-sm-6">
    <ul class="nav nav-tabs" role="tablist">
      <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab"><i class="fa fa-file-o" aria-hidden="true"></i></a></li>
      <li role="presentation"><a href="#favourites" aria-controls="profile" role="tab" data-toggle="tab">Favourites</a></li>
      <li role="presentation"><a href="#family" aria-controls="messages" role="tab" data-toggle="tab">Family</a></li>
      <li role="presentation"><a href="#friends" aria-controls="settings" role="tab" data-toggle="tab">Friends</a></li>
      <li role="presentation"><a href="#work" aria-controls="settings" role="tab" data-toggle="tab">Work</a></li>
    </ul>
  </div>
</div>
<hr class="style1" />
<div class="row">
  <div class="col-sm-6">
    <%= render current_user.contacts.order(:name) %>
  </div>
  <div class="col-sm-6">
    <div class="tab-content">
      <div role="tabpanel" class="tab-pane fade in active" id="home">
        <%= render 'form' %>
      </div>
      <div role="tabpanel" class="tab-pane fade" id="favourites">
        <%= render 'favourites' %>
      </div>
      <div role="tabpanel" class="tab-pane fade" id="family">
        <%= render 'familys' %>
      </div>
      <div role="tabpanel" class="tab-pane fade" id="friends">
        <%= render 'friends' %>
      </div>
      <div role="tabpanel" class="tab-pane fade" id="work">
        <%= render 'works' %>
      </div>
    </div>
  </div>
</div>
